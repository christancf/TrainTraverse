<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|fill_horizontal"
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/history_row"
    android:orientation="vertical">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|fill_horizontal"
        android:paddingHorizontal="35dp"
        android:paddingVertical="20dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_marginRight="20dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="0.1"
        app:srcCompat="@drawable/carbon_train_ticket" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        >

        <TextView
            android:id="@+id/train_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:fontFamily="@font/poppins_bold"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:text="Train 1" />

        <TextView
            android:id="@+id/journey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="TextView"
            android:textSize="14dp"
            tools:text="Colombo -> Kandy" />

        <TextView
            android:id="@+id/reservation_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="TextView"
            android:textColor="#6B7CB5"
            android:textSize="14dp"
            tools:text="Reserved Date  :   2022-09-12 08:00 AM" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/right_chevron"
        android:layout_marginHorizontal="8dp"
        />

    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.1"
        android:background="?android:attr/listDivider" />
</LinearLayout>